<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Séquences comptables -->
        <record id="seq_edu_student_invoice" model="ir.sequence">
            <field name="name">Factures étudiants</field>
            <field name="code">edu.student.invoice</field>
            <field name="prefix">FAC%(y)s</field>
            <field name="suffix"></field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="active" eval="True"/>
        </record>
        
        <record id="seq_edu_student_payment" model="ir.sequence">
            <field name="name">Paiements étudiants</field>
            <field name="code">edu.student.payment</field>
            <field name="prefix">PAY%(y)s</field>
            <field name="suffix"></field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="active" eval="True"/>
        </record>
        
        <record id="seq_edu_scholarship" model="ir.sequence">
            <field name="name">Bourses d'études</field>
            <field name="code">edu.scholarship</field>
            <field name="prefix">BOU%(y)s</field>
            <field name="suffix"></field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
            <field name="active" eval="True"/>
        </record>
        
    </data>
</odoo>
