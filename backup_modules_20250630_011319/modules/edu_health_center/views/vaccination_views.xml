                <filter name="reactions" string="Avec rÃ©actions" domain="[('immediate_reaction', '=', True)]"/>
                <filter name="next_dose_due" string="Prochaine dose due" domain="[('next_dose_due', '!=', False)]"/>
                
                <group expand="0" string="Grouper par">
