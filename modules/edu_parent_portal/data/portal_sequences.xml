<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Séquence pour les notifications -->
        <record id="seq_parent_notification" model="ir.sequence">
            <field name="name">Notification Parent</field>
            <field name="code">edu.parent.notification</field>
            <field name="prefix">PN</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les rendez-vous -->
        <record id="seq_edu_parent_appointment" model="ir.sequence">
            <field name="name">Rendez-vous Parent</field>
            <field name="code">edu.parent.appointment</field>
            <field name="prefix">RDV</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Séquence pour les demandes de documents -->
        <record id="seq_document_request" model="ir.sequence">
            <field name="name">Demande Document</field>
            <field name="code">edu.document.request</field>
            <field name="prefix">DOC</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les rapports personnalisés -->
        <record id="seq_parent_report" model="ir.sequence">
            <field name="name">Rapport Parent</field>
            <field name="code">edu.parent.report</field>
            <field name="prefix">RPT</field>
            <field name="padding">6</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les paiements -->
        <record id="seq_edu_parent_payment" model="ir.sequence">
            <field name="name">Paiement Parent</field>
            <field name="code">edu.parent.payment</field>
            <field name="prefix">PAY</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
        <!-- Séquence pour les transactions de paiement -->
        <record id="seq_edu_payment_transaction" model="ir.sequence">
            <field name="name">Transaction Paiement</field>
            <field name="code">edu.payment.transaction</field>
            <field name="prefix">TXN</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
        
    </data>
</odoo>
