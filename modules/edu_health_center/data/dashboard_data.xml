<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tableau de bord par défaut -->
        <record id="default_health_dashboard" model="health.dashboard">
            <field name="name">Tableau de Bord Principal</field>
        </record>
        
        <!-- Quelques alertes de démonstration -->
        <record id="demo_alert_1" model="health.alert">
            <field name="name">Alerte vaccination</field>
            <field name="alert_type">vaccination</field>
            <field name="severity">medium</field>
            <field name="description">Rappel de vaccination en retard</field>
            <field name="state">active</field>
        </record>
        
        <record id="demo_alert_2" model="health.alert">
            <field name="name">Stock médicament faible</field>
            <field name="alert_type">medical</field>
            <field name="severity">high</field>
            <field name="description">Stock de paracétamol insuffisant</field>
            <field name="state">active</field>
        </record>
    </data>
</odoo> 