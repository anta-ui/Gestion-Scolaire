<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Liste des Campagnes -->
        <record id="view_edu_campaign_tree" model="ir.ui.view">
            <field name="name">edu.campaign.tree</field>
            <field name="model">edu.campaign</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                    <field name="total_recipients"/>
                </tree>
            </field>
        </record>

        <!-- Vue Formulaire des Campagnes -->
        <record id="view_edu_campaign_form" model="ir.ui.view">
            <field name="name">edu.campaign.form</field>
            <field name="model">edu.campaign</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_start" string="Démarrer" type="object" class="btn-primary" invisible="state not in ['draft', 'scheduled']"/>
                        <button name="action_schedule" string="Programmer" type="object" invisible="state != 'draft'"/>
                        <button name="action_cancel" string="Annuler" type="object" invisible="state not in ['draft', 'scheduled', 'running']"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="campaign_type"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="total_recipients"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Messages">
                                <field name="message_ids">
                                    <tree>
                                        <field name="subject"/>
                                        <field name="recipient_ids"/>
                                        <field name="state"/>
                                        <field name="sent_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Recherche des Campagnes -->
        <record id="view_edu_campaign_search" model="ir.ui.view">
            <field name="name">edu.campaign.search</field>
            <field name="model">edu.campaign</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="campaign_type"/>
                    <filter string="Actives" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Terminées" name="done" domain="[('state', '=', 'done')]"/>
                    <group expand="0" string="Grouper par">
                        <filter string="Type" name="group_type" context="{'group_by': 'campaign_type'}"/>
                        <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
    </data>
</odoo>