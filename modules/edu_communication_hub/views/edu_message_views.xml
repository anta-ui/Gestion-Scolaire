<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vue formulaire pour edu.message -->
        <record id="view_edu_message_form" model="ir.ui.view">
            <field name="name">edu.message.form</field>
            <field name="model">edu.message</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <header>
                        <button name="action_send_now" string="Envoyer maintenant" 
                                type="object" class="btn-primary"
                                invisible="state not in ['draft', 'scheduled']"/>
                        <button name="action_schedule" string="Programmer" 
                                type="object" class="btn-secondary"
                                invisible="state != 'draft'"/>
                        <button name="action_cancel" string="Annuler" 
                                type="object" class="btn-secondary"
                                invisible="state in ['sent', 'cancelled']"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,scheduled,sent"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="subject"/>
                                <field name="reference" readonly="1"/>
                                <field name="message_type"/>
                                <field name="priority"/>
                                <field name="sender_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="recipient_type"/>
                                <field name="scheduled_date" 
                                       invisible="state != 'scheduled'"/>
                                <field name="sent_date" readonly="1" 
                                       invisible="state != 'sent'"/>
                                <field name="total_recipients"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Contenu">
                                <field name="content_text" 
                                       placeholder="Saisissez le contenu du message..."/>
                                <field name="content" 
                                       invisible="message_type not in ['email']"/>
                            </page>
                            
                            <page string="Destinataires">
                                <field name="recipient_ids" widget="many2many_tags"/>
                            </page>
                            
                            <page string="Statistiques" 
                                  invisible="state not in ['sent', 'failed']">
                                <group>
                                    <field name="delivered_count"/>
                                    <field name="failed_count"/>
                                </group>
                                <field name="error_message" 
                                       invisible="state != 'failed'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue liste pour edu.message -->
        <record id="view_edu_message_tree" model="ir.ui.view">
            <field name="name">edu.message.tree</field>
            <field name="model">edu.message</field>
            <field name="arch" type="xml">
                <tree string="Messages" decoration-info="state=='draft'" 
                      decoration-warning="state=='scheduled'" 
                      decoration-success="state=='sent'"
                      decoration-danger="state=='failed'">
                    <field name="reference"/>
                    <field name="subject"/>
                    <field name="message_type"/>
                    <field name="sender_id"/>
                    <field name="total_recipients"/>
                    <field name="scheduled_date"/>
                    <field name="sent_date"/>
                    <field name="state"/>
                    <field name="priority" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Vue recherche pour edu.message -->
        <record id="view_edu_message_search" model="ir.ui.view">
            <field name="name">edu.message.search</field>
            <field name="model">edu.message</field>
            <field name="arch" type="xml">
                <search string="Rechercher Messages">
                    <field name="subject" string="Sujet"/>
                    <field name="reference" string="Référence"/>
                    <field name="sender_id" string="Expéditeur"/>
                    <separator/>
                    <filter name="my_messages" string="Mes messages" 
                            domain="[('sender_id', '=', uid)]"/>
                    <filter name="draft" string="Brouillons" 
                            domain="[('state', '=', 'draft')]"/>
                    <filter name="scheduled" string="Programmés" 
                            domain="[('state', '=', 'scheduled')]"/>
                    <filter name="sent" string="Envoyés" 
                            domain="[('state', '=', 'sent')]"/>
                    <separator/>
                    <filter name="urgent" string="Urgent" 
                            domain="[('priority', '=', 'urgent')]"/>
                    <separator/>
                    <group expand="0" string="Regrouper par">
                        <filter name="group_state" string="État" 
                                context="{'group_by': 'state'}"/>
                        <filter name="group_type" string="Type" 
                                context="{'group_by': 'message_type'}"/>
                        <filter name="group_sender" string="Expéditeur" 
                                context="{'group_by': 'sender_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue kanban pour edu.message -->
        <record id="view_edu_message_kanban" model="ir.ui.view">
            <field name="name">edu.message.kanban</field>
            <field name="model">edu.message</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" 
                        class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="subject"/>
                    <field name="message_type"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="total_recipients"/>
                    <field name="scheduled_date"/>
                    <field name="sent_date"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong><field name="subject"/></strong>
                                        <div>
                                            <i class="fa fa-envelope"/> 
                                            <field name="message_type"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-users"/> 
                                            <field name="total_recipients"/> destinataires
                                        </div>
                                        <div t-if="record.scheduled_date.raw_value">
                                            <i class="fa fa-clock-o"/> 
                                            <field name="scheduled_date"/>
                                        </div>
                                        <div t-if="record.sent_date.raw_value">
                                            <i class="fa fa-check"/> 
                                            <field name="sent_date"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="oe_kanban_footer_left">
                                        <span t-if="record.priority.raw_value == 'urgent'"
                                              class="badge badge-danger">Urgent</span>
                                        <span t-if="record.priority.raw_value == 'high'"
                                              class="badge badge-warning">Élevé</span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
