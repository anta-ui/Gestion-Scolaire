                            invisible="step == 'config'"/>
                    <button name="action_next_step" type="object" 
                            string="Suivant" class="btn-primary"
                            invisible="step == 'review'"/>
                    <button name="action_finish" type="object" 
                            string="Terminer" class="btn-success"
                            invisible="step != 'review'"/>
